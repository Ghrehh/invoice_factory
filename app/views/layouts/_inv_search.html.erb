<% @invs.each do |inv| %>
 <div class="invoice-header-container">
    <% if inv.recipient.length > 19 %>
      <p class="invoice-header-container-name tk-refrigerator-deluxe"><%= inv.recipient[0..18] + "..." %></p>
    <% else %>
      <p class="invoice-header-container-name tk-refrigerator-deluxe"><%= inv.recipient %></p>
    <% end %>
    <p class="invoice-header-container-date tk-proxima-nova"><%= inv.created_at.to_s[0..9] %></p>
  </div>
<% end %>

<% if current_user.invs.count < 1 %>

  <div class="no-results">
    <i class="fa fa-frown-o fa-4x"></i>
    <p>You haven't made any<br>invoices yet!</p>
  </div>

<% elsif @invs.count == 0 %>
  <div class="no-results">
    <i class="fa fa-frown-o fa-4x"></i>
    <p>No items found matching <br> that search!</p>
  </div>
<% end %>