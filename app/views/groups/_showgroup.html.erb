


<div class="right-inner-container">
  <div class="right-inner">
    <h3>Viewing Group <%=@group.name %></h3>
  </div>
  
  <div class="right-inner-two">
    <h3></h3>
  </div>
</div>

<div class="groups-container">
  <div class="groups-inner">
   <% @groupinvs.each do |inv| %>
    <a href="/dashboard_invoice//<%= inv.id.to_s %>" data-remote="true">
    
      <div class="dashboard-invoice">

        
        <% if inv.recipient.length > 19 %>
          <p><%= inv.recipient[0..18] + "..." %></p>
        <% else %>
          <p><%= inv.recipient %></p>
        <% end %>
        <p class="dashboard-date"><%= inv.created_at.to_s[0..9] %></p>
        </div>

      

    </a>
    <% end %>
    
  
 </div>
</div>

 <a style:"float:right" href="/download_group/<%=@group.id%>">
      <i class="fa fa-arrow-circle-down fa-3x"></i>
    </a>

    <a style:"float:right" href="/groups/<%=@group.id%>"  data-remote="true" rel="nofollow" data-method="delete" data-confirm="Are you sure you want to delete this group?">
     <i class="fa fa-trash-o fa-3x"></i>
    </a>