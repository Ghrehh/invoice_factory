<div class="dashboard-left">
  <div class="left-inner">
    <h3>Recent Invoices</h3>
  </div>
  
  <div class="left-search">
    <i class="fa fa-search"></i>
  </div>
  
  <div class="left-invoices-container">
    
    <% @invs.each do |inv| %>
      <a href="/invs/<%= inv.id.to_s %>/edit">
        <div class="dashboard-invoice">
          <p><%= inv.recipient %></p>
          <p class="dashboard-date"><%= inv.created_at.to_s[0..9] %></p>
        </div>
      </a>
    <% end %>
    
  </div>
    
</div>