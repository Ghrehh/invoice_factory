<div class="iframe-inner">
  <% if current_user.invs.count == 0 %>
  
    <div style:"width:600px;height:700px;background-color: black">
        <div class="no-results">
        <i class="fa fa-frown-o fa-4x"></i>
        <p>You need to make an invoice<br> before you can preview<br> these changes</p>
        </div>
    </div>
    
  <% else %>
    <iframe src="<%= asset_path "invs/" + current_user.invs.first.id.to_s %>" width="100%" height="100%"></iframe>
  <% end %>
  
</div>