<h1>Creating New User</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <Br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.label "Confirm Password" %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  
  
<%= f.submit "Update", class: "line-button" %>
<% end %>