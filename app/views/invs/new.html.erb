<p>Creating a new Invoice</p>
<%= form_for(@inv) do |f| %>
  <%= f.label "Who is the recipient?" %>
  <br>
  <%= f.text_field :recipient, autofocus: true %>
  <br>
  <%= f.label "Include in a group? Leave blank if no" %>
  <br>
  <%= f.collection_select :group_id, Group.order(:name),:id,:name, include_blank: true %>
  <br>
  <%= f.submit "Create" %>
<% end %>
    
